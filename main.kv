WindowManager:
    LoadingScreen:
    HomeScreen:
    SettingsScreen:

<LoadingScreen>:
    name: "loading_screen"

    BoxLayout:
        height: root.height
        width: root.width
        orientation: 'vertical'
        spacing: -200

        LoadingSpinner:
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0, 0, 1
                    origin: self.center
            canvas.after:
                PopMatrix

            Image:
                size_hint: None, None
                size: 100, 100
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                source:"./assets/icons/loading1.png"


        Label:
            text: 'loading..'
            font_size: 30
            font_name: './fonts/1.ttf'
            color: [1,1,1,1]

<HomeScreen>:
    name: "home_screen"

    SlideComponent:
        mbr: menubar
        height: root.height
        width: root.width
    MenuBar:
        id: menubar

<SettingsScreen>:
    name: "settings_screen"

    BoxLayout:
        width: 1280
        height: 400

        Button:
            size_hint: (0.2,0.2)
            text: "Go Back"
            on_press: self.parent.parent.goToHome()




# components

<ShadowLabel>:
    canvas.before:
        Color:
            rgba: root.tint

        Rectangle:
            pos:
                int(self.center_x - self.texture_size[0] / 2.) + root.decal[0],\
                int(self.center_y - self.texture_size[1] / 2.) + root.decal[1]

            size: root.texture_size
            texture: root.texture

        Color:
            rgba: 1, 1, 1, 1
            
<MenuButton>:
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 0.2
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(0, 0), (0, 0), (0, 0), (10, 10)]
<MenuBar>:
    anchor_x: 'right'
    anchor_y: 'top'